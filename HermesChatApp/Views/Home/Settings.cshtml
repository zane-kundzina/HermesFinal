@{
    Layout = null;
    ViewData["Title"] = "User Settings";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Chat.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/d3814f3c81.js" crossorigin="anonymous" asp-append-version="true"></script>

</head>

<body>   

    <div class="container">
        
        <div class="row no-gutters"> 
            <div class="col-md-12 border-right tall-col">
                <div class="chatlist-item chatlist-item--pink no-gutters">                    
                    <div class="text">
                        <h6>User settings</h6>
                        <p class="text-muted">User settings are going to be updated here</p>
                    </div>                   
                </div>  
            </div>
        </div>

        <div class="row no-gutters">
             <div class="col-md-12 border-right tall-col">
                    <a href="#" title="@User.Identity.Name">
                        @*---Here should be placed uploaded user picture---*@
                        <img class="profile-upload-pic float-left" src="~/pic/cool_cat.jpg" alt="Profile picture" />
                    </a>

                     <div class="float-right">    
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Chat"><i class="fas fa-sign-out-alt fa-lg"></i></a>
                    </div>
                                      
                    @*---Upload button---*@
                    <div class="float-left">                       
                        <button type="submit" class="nav-link btn btn-link text-dark">Upload</button>
                    </div>

                   

             </div>
        </div>

    </div>
</body>


